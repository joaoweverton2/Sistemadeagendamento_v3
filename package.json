{
  "name": "agendamento-mercadorias",
  "version": "1.0.0",
  "description": "Sistema de agendamento de recebimento de mercadorias",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "node --loader ts-node/esm src/server.ts",
    "build": "tsc && npm run copy-files",
    "start": "node dist/server.js",
    "test": "vitest run",
    "copy-files": "cp -r src/views dist/ 2>/dev/null || true && cp -r src/public dist/ 2>/dev/null || true",
    "render-build": "npm install --omit=dev && npm run build",
    "dev:watch": "ts-node-dev --respawn --transpile-only src/server.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "google-auth-library": "^9.0.0",
    "googleapis": "^126.0.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/google-auth-library": "^9.11.0",
    "@types/googleapis": "^118.0.0",
    "@types/node": "^20.12.12",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}